<%- model_class = Opportunity -%>
<div class="page-header">
  <h1><%=t '.title', :default => Opportunity %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:price_offering) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.price_offering %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:additional_expenses) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.additional_expenses %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:monthly_rent) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.monthly_rent %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:service_charges) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.service_charges %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:profit_method_1) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.profit_method_1 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:profit_method_2) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.profit_method_2 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:qm) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.qm %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:administration_costs_in_percent) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.administration_costs_in_percent %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:equity) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.equity %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:bank_rate) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.bank_rate %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cash_flow) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.cash_flow %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.name %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              opportunities_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_opportunity_path(@opportunity), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              opportunity_path(@opportunity),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

