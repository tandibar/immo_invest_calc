<h1>Listing opportunities</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Address</th>
      <th>Price offering</th>
      <th>Additional expenses</th>
      <th>Monthly rent</th>
      <th>Service charges</th>
      <th>Profit method 1</th>
      <th>Profit method 2</th>
      <th>Qm</th>
      <th>Administration costs in percent</th>
      <th>Equity</th>
      <th>Bank rate</th>
      <th>Cash flow</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opportunities.each do |opportunity| %>
      <tr>
        <td><%= opportunity.user %></td>
        <td><%= opportunity.address %></td>
        <td><%= opportunity.price_offering %></td>
        <td><%= opportunity.additional_expenses %></td>
        <td><%= opportunity.monthly_rent %></td>
        <td><%= opportunity.service_charges %></td>
        <td><%= opportunity.profit_method_1 %></td>
        <td><%= opportunity.profit_method_2 %></td>
        <td><%= opportunity.qm %></td>
        <td><%= opportunity.administration_costs_in_percent %></td>
        <td><%= opportunity.equity %></td>
        <td><%= opportunity.bank_rate %></td>
        <td><%= opportunity.cash_flow %></td>
        <td><%= opportunity.name %></td>
        <td><%= link_to 'Show', opportunity %></td>
        <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
        <td><%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opportunity', new_opportunity_path %>
